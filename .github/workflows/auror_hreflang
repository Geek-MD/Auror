name: Scrape hreflang from URL

on:
  workflow_dispatch:  # Permite ejecutar el workflow manualmente
  schedule:
    - cron: "0 0 * * *"  # Corre el workflow diariamente a la medianoche

jobs:
  scrape_and_save:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        python -m pip install beautifulsoup4 requests pyyaml

    - name: Scrape hreflang and save to YAML
      run: |
        python auror_scrape_hreflang.py

    - name: Commit and push changes
      run: |
        git config --global user.name "GitHub Actions Bot"
        git config --global user.email "actions@github.com"
        git add auror_hreflang_links.yaml
        git commit -m "Updated hreflang links"
        git push
